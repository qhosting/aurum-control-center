# ================================
# AURUM CONTROL CENTER - ENVIRONMENT VARIABLES
# ================================
# Este archivo es una plantilla. Copiar a .env y configurar valores reales.
# NO COMMITEAR .env al repositorio (incluido en .gitignore)

# ================================
# DATABASE - PostgreSQL
# ================================
# Conexión directa a PostgreSQL (para migraciones)
DATABASE_URL="postgresql://postgres:202284abf4656b289b41@qhosting_aurum-control-center-db:5432/aurum-control-center-db?schema=public"

# Conexión vía PgBouncer (para aplicación en producción)
DATABASE_URL_POOLED="postgres://postgres:202284abf4656b289b41@pgbouncer:5432/aurum-control-center-db?sslmode=disable&pgbouncer=true"

# ================================
# REDIS CACHE
# ================================
REDIS_URL="redis://default:aurum-control-center-redis@qhosting_aurum-control-center-redis:6379"
REDIS_HOST="qhosting_aurum-control-center-redis"
REDIS_PORT="6379"
REDIS_PASSWORD="aurum-control-center-redis"

# Cache TTL (segundos)
CACHE_TTL_SHORT="300"      # 5 minutos
CACHE_TTL_MEDIUM="1800"    # 30 minutos
CACHE_TTL_LONG="3600"      # 1 hora
CACHE_TTL_EXTENDED="86400" # 24 horas

# ================================
# NEXTAUTH - AUTENTICACIÓN
# ================================
# URL de la aplicación
NEXTAUTH_URL="http://localhost:3000"

# Secret para JWT (generar con: openssl rand -base64 32)
NEXTAUTH_SECRET="CHANGE_THIS_TO_RANDOM_SECRET_KEY_32_CHARS_MIN"

# Configuración de sesiones
SESSION_MAX_AGE="2592000" # 30 días en segundos

# ================================
# APPLICATION SETTINGS
# ================================
NODE_ENV="development" # development | production | test
NEXT_PUBLIC_APP_NAME="Aurum Control Center"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Puerto de la aplicación
PORT="3000"

# ================================
# LOGGING
# ================================
LOG_LEVEL="info" # error | warn | info | debug
LOG_FORMAT="json" # json | pretty

# ================================
# FEATURES FLAGS
# ================================
FEATURE_SATELLITES_MANAGEMENT="true"
FEATURE_TASKS_MANAGEMENT="true"
FEATURE_TICKETS_MANAGEMENT="true"
FEATURE_FINANCE_MODULE="true"
FEATURE_ANALYTICS_DASHBOARD="true"

# ================================
# SECURITY
# ================================
# CORS Origins (separados por comas)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# Rate Limiting
RATE_LIMIT_WINDOW="900000"  # 15 minutos en ms
RATE_LIMIT_MAX_REQUESTS="100"

# ================================
# EMAIL (opcional - configurar si se necesita)
# ================================
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
