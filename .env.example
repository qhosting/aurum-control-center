# ================================
# MONITORING & ANALYTICS (opcional)
# ================================
# SENTRY_DSN=""
# GOOGLE_ANALYTICS_ID=""
# HOTJAR_ID=""

# ================================
# DEVELOPMENT ONLY
# ================================
# Prisma Studio
PRISMA_STUDIO_PORT="5555"

# Debug
DEBUG="false"
DEBUG_SQL="false"
